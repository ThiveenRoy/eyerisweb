
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>studentLogin</title>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
    <style>
        .button {
            background-color: gray;
            border: none;
            color: white;
            padding: 20px 34px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 20px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <p> EyeRIS Face Recognition </p>
    <form method="post" action="~/Home/StudentLogin">
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="~/images/sad.png" class="center" />
                    <p> Student Login </p>
                    <input type="text" name="username" placeholder="Username" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <input type="submit" value="Login" style="display:inline-block;">
                    <a href="~/Home/Index" class="button" style="display:inline-block;">
                        Im a Lecturer!
                    </a>
                    <p name="gay" @TempData["gay"]></p>
                </div>

            </div>
        </div>
    </form>
</body>
</html>
